# Django Environment Configuration
# Copy this file to .env and update the values according to your environment

# Basic Django Settings
SECRET_KEY='your-secret-key-here'
DEBUG=True
PROJECT='Show Room'

# Environment Selection (local, development, production)
DJANGO_ENVIRONMENT=local

# Allowed Hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For Local Development (SQLite - no additional config needed)

# For PostgreSQL (Local/Development)
LOCAL_DB=True
LOCAL_DB_NAME=show_room_db
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=your_password
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432



# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,https://yourdomain.com
CSRF_TRUSTED_ORIGINS=http://localhost:4200,https://yourdomain.com

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# AWS Configuration (for production static/media files)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Redis Configuration (for production caching)
# REDIS_URL=redis://127.0.0.1:6379/1

# Security Settings (production)
SECURE_SSL_REDIRECT=True